{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PipelineMessage",
  "type": "object",
  "required": ["id", "type", "payload"],
  "properties": {
    "id": {
      "type": "string",
      "description": "메시지 고유 식별자"
    },
    "type": {
      "type": "string",
      "description": "메시지 유형 (예: stt_result, text_processed 등)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "메시지 생성 시각"
    },
    "payload": {
      "type": "object",
      "description": "모듈 간 전달되는 실제 데이터"
    },
    "metadata": {
      "type": "object",
      "description": "추가 메타데이터 (실험 설정, 버전 등)"
    }
  },
  "additionalProperties": false
}
